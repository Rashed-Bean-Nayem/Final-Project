<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        li a:hover {
            background-color: #5cb85c;
        }
        li form :hover {
            background-color: #5cb85c;
        }
    </style>
</head>
<body style="background-color: #B7BBCA;">
    <header>       
            <b>   
                    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #434B43;">
                        <div class="container">                           
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <font color="white">E-Election Voting</font></a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                        aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                                    <partial name="_LoginPartial" />
                                    <ul class="navbar-nav flex-grow-1 ml-auto topnav">
                                        <li class="nav-item active">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"> <font color="white">Home</font> <span class="sr-only">(current)</span></a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"><font color="white">Privacy</font></a>
                                        </li>
                                    </ul>
                                </div>
                            </font>
                        </div>
                    </nav>                
            </b>           
</header>
    <div class="container"  >
        <main role="main" class="pb-3" >
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer main-footer text-muted text-center">
        <div class="container">
            <font color="Black"><b>   &copy; @DateTime.Now.Year E-Election Voting</b></font>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
