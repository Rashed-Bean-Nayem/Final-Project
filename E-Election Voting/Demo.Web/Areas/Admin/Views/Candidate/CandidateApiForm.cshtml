@{
    ViewData["Title"] = "NID Verification";
}

    <div class="container">    
                <br />
                <br />
                <font color="black">
                    <h5> <b> Provide the National Identity Card number in the form below and click on the "Verify" button.Then, can see candidate registration further status.</b> </h5>
                </font>
                <form method="post" asp-area="admin" asp-controller="Candidate" asp-action="AddCandidate" asp-antiforgery="true" enctype="multipart/form-data">
                    <font color="black"><b>National Identity Card Number:</b></font>
                    <div class="form-group">
                        <input type="number" name="userNid" id="korisnik" pattern="/^-?\d+\.?\d*$/" onKeyPress="if(this.value.length==10)  return false;" required="required" placeholder="Example-1234567890" class="form-control" />
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" title="Login" value="Verify" class="btn btn-primary form-control" />
                    </div>
                </form>
    </div>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>





