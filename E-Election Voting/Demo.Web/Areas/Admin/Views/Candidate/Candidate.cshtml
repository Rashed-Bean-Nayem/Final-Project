
@{
    ViewData["Title"] = "Add Candidate";
}
@model ElectionCandidateDataBO;

   
<div class="container">
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Candidate Form</h3>
            </div>
            <form method="post" asp-area="Admin" asp-controller="Candidate" asp-action="Candidate" asp-antiforgery="true" enctype="multipart/form-data">
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="NID"></label>
                            <input asp-for="NID" class="form-control" placeholder="NID">
                            <span asp-validation-for="NID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="Mobile"></label>
                            <input asp-for="Mobile" class="form-control" placeholder="Mobile">
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="ImageFile"></label>
                            <input type="file" asp-for="ImageFile" class="form-control">
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">

                            <label asp-for="Address"></label>
                            <input asp-for="Address" class="form-control" placeholder="Address">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" placeholder="Description">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Candidate" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>
        </div>
    </div>


