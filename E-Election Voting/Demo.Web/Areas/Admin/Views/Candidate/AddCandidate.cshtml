@{
    ViewData["Title"] = "Add Candidate";
}
@model ApiRecordForCandidateData;

@if (@Model.ApiClasses.ApiName != null && @Model.ElectionVoterCheck.NID == null)
{
    <div class="container">
        <div class="col-md-10">
            <div class="card card-primary">
                <div class="card-header">
                    <h3>Candidate Form</h3>
                </div>
                <form method="post" asp-area="Admin" asp-controller="Candidate" asp-action="CandidatePost" asp-antiforgery="true" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" value="@Model.ApiClasses.ApiName" readonly>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label asp-for="NID"></label>
                                <input asp-for="NID" class="form-control" value="@Model.ApiClasses.ApiNid" readonly>
                            </div>
                            <div class="col">
                                <label asp-for="DateOfBirth"></label>
                                <input type="datetime" asp-for="DateOfBirth" class="form-control" value="@Model.ApiClasses.ApiDateOfBirth" readonly>
                            </div>
                            <div class="col">
                                <label asp-for="PdfListBOfiles"></label>
                                <input type="file" asp-for="PdfListBOfiles" class="form-control" multiple required="required">
                                <span asp-validation-for="PdfListBOfiles" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label asp-for="Mobile"></label>
                                <input asp-for="Mobile" class="form-control" placeholder="Mobile" required="required">
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="ImageFile"></label>
                                <input type="file" asp-for="ImageFile" class="form-control" required="required">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label asp-for="Address"></label>
                                <input asp-for="Address" class="form-control" placeholder="Address" required="required">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" placeholder="About" required="required">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label asp-for="Motto"></label>
                                <input asp-for="Motto" class="form-control" placeholder="Motto" required="required">
                                <span asp-validation-for="Motto" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="LogoImageFile"></label>
                                <input type="file" asp-for="LogoImageFile" class="form-control" required="required">
                                <span asp-validation-for="LogoImageFile" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add Candidate" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <br />
        <br />
        <font color="red"><h3><b>Please enter your valid NID number for registration.</b></h3></font>
    </div>
}


