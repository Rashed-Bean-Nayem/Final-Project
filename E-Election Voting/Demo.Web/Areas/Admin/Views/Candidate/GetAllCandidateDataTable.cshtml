
@{
    ViewData["Title"] = "All Candidates";
}
@model RegistrationData;
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap5.min.css">

<div class="container">
    <h1>Candidates</h1>
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Candidate Photo</th>
                <th>Candidate Name</th>
                <th>Candidate Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in Model.ElectionCandidates)
            {
                <tr>
                    <td><img src="@candidate.ImageUrl" alt="Profile Photo" width="40" height="40" /></td> 
                    <td>@candidate.Name</td>
                    <td>@candidate.Address</td>
                    <td><a asp-area="" asp-controller="Election" asp-action="GetCandidate" asp-route-id=@candidate.Id class="btn btn-sm btn-primary">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>



