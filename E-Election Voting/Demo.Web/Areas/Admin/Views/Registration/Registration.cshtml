
@{
    ViewData["Title"] = "Add New Election";
}
@model RegistrationData;

<div>
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Organise Election</h3>
            </div>
            <form method="post" asp-area="Admin" asp-controller="Registration" asp-action="Registration">
                <div class="row">
                    <div class="col">
                        <label asp-for="ElectionName"></label>
                        <input asp-for="ElectionName" class="form-control" />
                        <span asp-validation-for="ElectionName" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label>Select Candidate</label><br />
                        <select asp-for="CID1" class="form-control">
                            <option value="" disabled selected>--Select--</option>
                            @foreach (var item in Model.ElectionCandidates)
                            {
                                <option value=@item.Id>@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col">
                        <label>Select Candidate</label><br />
                        <select asp-for="CID2" class="form-control">
                            <option value="" disabled selected>--Select--</option>
                            @foreach (var item in Model.ElectionCandidates)
                            {
                                <option value=@item.Id>@item.Name</option>
                            }
                        </select>
                    </div>
                </div>                        
                        <div class="form-group">
                            <label asp-for="ElectionDate"></label>
                            <input type="date" asp-for="ElectionDate" class="form-control" placeholder="EnrollDate">
                            <span asp-validation-for="ElectionDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add Election" class="btn btn-primary" />
                        </div>
            </form>
        </div>
    </div>
</div>


