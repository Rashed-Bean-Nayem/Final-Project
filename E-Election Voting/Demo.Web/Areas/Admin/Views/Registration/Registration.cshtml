
@{
    ViewData["Title"] = "Add Election";
}
@model RegistrationData;

<div>
    <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Organise Election</h3>
            </div>
            <form method="post" asp-area="Admin" asp-controller="Registration" asp-action="Registration">
                <div class="row">
                    <div class="col">
                        <label>Select Candidate</label><br />
                        <select asp-for="CandidateId" class="form-control">
                            <option value="" disabled selected>--Select--</option>
                            @foreach (var item in Model.ElectionCandidates)
                            {
                                <option value=@item.Id>@item.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col">
                        <label>Select Voter</label><br />
                        <select asp-for="VoterId" class="form-control">
                            <option value="" disabled selected>--Select--</option>
                            @foreach (var item in Model.ElectionVoters)
                            {
                                <option value=@item.Id>@item.Name</option>

                            }
                        </select>
                    </div>
                        </div>                        
                        <div class="form-group">
                            <label asp-for="EnrollDate"></label>
                            <input type="date" asp-for="EnrollDate" class="form-control" placeholder="EnrollDate">
                            <span asp-validation-for="EnrollDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="checkbox" asp-for="IsPaymentComplete">
                            <label>Payment is complete</label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Add Registration" class="btn btn-primary" />
                        </div>
            </form>
        </div>
    </div>
</div>


